modules-right = wifi eth battery date

module-margin = 2

tray-position = right

[module/i3]
type = internal/i3

index-sort = true
format = <label-state> <label-mode>

label-mode = %mode%
label-mode-background = ${colors.alert}
label-mode-padding = 1

label-focused-background = ${colors.background}
label-focused-foreground = ${colors.focus-fg}
label-focused-padding = 1

label-unfocused-padding = 1

label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 1

label-separator = |
label-separator-padding = 1

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 9;
ws-icon-3 = 10;
ws-icon-default = 

[module/date]
type = internal/date
label = %date% %time%
interval = 1

time = " %I:%M%p
date = "%a, %b %d, %Y"

[module/battery]
