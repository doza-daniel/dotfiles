[colors]
background = #000
foreground = #7c7c7c
focus-fg = #fff
alert = #fca325

[bar/example]
width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "DejaVuSans:pixelsize=13;3"
font-1 = "Font Awesome 5 Free:pixelsize=10;3"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=10;3"
font-3 = "Font Awesome 5 Brands:pixelsize=10;3"
font-4 = Wuncon Siji:pixelsize=10;3

